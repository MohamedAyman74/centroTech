<style>
    * {
        margin: 0;
    }
    #error-flash {
        color: white;
        width: 100vw;
        text-align: center;
        font-weight: 500;
        background: rgb(255,0,0);
background: linear-gradient(90deg, rgba(255,0,0,1) 0%, rgba(78,71,237,1) 70%);
        margin-bottom: 2em;
        margin-top: -2em;
        padding: 1em 0;
    }
    #success-flash {
        font-family: 'Poppins', sans-serif;
        color: white;
        width: 100vw;
        text-align: center;
        font-weight: 500;
        background: rgb(0,255,0);
background: linear-gradient(90deg, rgba(0,255,0,1) 0%, rgba(78,71,237,1) 70%);
        margin-bottom: 2em;
        margin-top: -2em;
        padding: 1em 0;
    }
</style>

<% if (success && success.length) { %>
    <div id="success-flash" >
        <%= success %>
            
    </div>
    <% } %>

        <% if (error && error.length) { %>
            <div id="error-flash">
                <%= error %>
              
            </div>
            <% } %>