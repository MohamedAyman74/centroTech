<% layout("layouts/boilerplate") %>
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <div class="navbar-profile">
        <h1>Hello, <%= user.fullname.split(" ")[0] %>
        </h1>
        <ul class=" nav-links">
                <li><a href="/login">Login</a></li>
                <li><a href="/register">Register</a></li>
                </ul>

    </div>

    <section>
        <div class="main-flex">
            <div class="name-occ">
                <% if(user.image){ console.log(user.image.url) %>
                    <img id="profile-img" src="<%= user.image.url %>" alt="">
                    <% } else{ %>
                        <img id="profile-img" src="/images/blankProfile.png" alt="">
                        <% } %>
                            <h1>
                                <%= user.fullname %>
                            </h1>
                            <p>Student</p>
            </div>
            <!-- <div class="update-btn">
                <button>Update Profile</button>
            </div> -->
        </div>

        <form action="/profile/<%= user._id %>?_method=PUT" method="POST" enctype="multipart/form-data">

            <div class="input-group">
                <label for="">Full Name</label>
                <input type="text" value="<%= user.fullname%>" name="fullname">
            </div>
            <!-- <div class="input-group">
                <label for="">Last Name</label>
                <input type="text">
            </div> -->


            <div class="input-group">
                <label for="">Email</label>
                <input type="email" value="<%= user.email %>">
            </div>
            <div class="input-group">
                <label for="">Mobile Number</label>
                <input type="text" name="phone" value="<%= user.phone %>">
            </div>


            <div class="input-group">
                <label for="">Parent Number</label>
                <input type="text" name="parentPhone" value="<%= user.parentPhone %>">
            </div>
            <!-- <div class="input-group">
                <button>Change Password</button>
            </div> -->
            <div class="upload-group">
                <% if(user.image){ console.log(user.image.url) %>
                    <img id="upload-img" src="<%= user.image.url %>" alt="">
                    <% } else{ %>
                        <img id="upload-img" src="/images/blankProfile.png" alt="">
                        <% } %>
                            <label for="actual-btn">Choose File</label>
                            <input type="file" id="actual-btn" name="image" hidden>
                            <span id="file-chosen">No File Chosen</span>
                            <button type="submit">Update Profile</button>

            </div>
        </form>
    </section>
    <script src="/javascripts/profile.js"></script>