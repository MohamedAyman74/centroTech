<% layout("layouts/boilerplate") %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/register.css">
    <section>
        <div class="login-card">
            <h2>Welcome to CentroTech</h2>
            <form action="/register" class="validated-form" novalidate method="POST">
                <div>
                    <label for="fullname">Full Name</label>
                    <input type="text" id="fullname" class="form-control" name="fullname" required>
                    <div class="valid-feedback">Looks Good!</div>
                    <div class="invalid-feedback">Username is required.</div>
                </div>
                <div id="email-div">
                    <label for="email" id="email-label">Email</label>
                    <input type="email" id="email" class="form-control" name="email" required>
                    <div class="valid-feedback">Looks Good!</div>
                    <div class="invalid-feedback">Please type a correct email.</div>
                </div>
                <!-- <div>
                    <label for="username">User Name <small>(That will be shown to others, must be
                            unique)</small></label>
                    <input type="text" id="username" name="username">
                </div> -->
                <div>
                    <label for="password">Password</label>
                    <input type="password" id="password" class="form-control" name="password" required>
                    <div class="valid-feedback">Looks Good!</div>
                    <div class="invalid-feedback">Please type a stronger/longer password.</div>
                </div>
                <div>
                    <label for="password-repeat">Repeat your password</label>
                    <input type="password" name="confirmPassword" class="form-control" id="password-repeat" required>
                    <div class="valid-feedback">Looks Good!</div>
                    <div class="invalid-feedback">Your passwords don't match.</div>
                </div>
                <button>Create Account</button>
            </form>
            <div class="signup-redirect">
                <p>Already have an account?</p>
                <a href="/login">Sign in</a>
            </div>
        </div>
        <div class="login-img">
            <img src="/images/loginimg.png" alt="">
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function validatePassword() {
            const pass1 = document.getElementById("password").value;
            const pass2 = document.getElementById("password-repeat").value;
            pass1 != pass2 ? document.getElementById("password-repeat").setCustomValidity("Passwords don't Match.") : document.getElementById("password-repeat").setCustomValidity('');
        }
        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (function () {
            "use strict";

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            const forms = document.querySelectorAll(".validated-form");

            // Loop over them and prevent submission
            Array.from(forms).forEach(function (form) {
                form.addEventListener(
                    "submit",
                    function (event) {
                        validatePassword();
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }

                        form.classList.add("was-validated");
                    },
                    false
                );
            });
        })();

    </script>