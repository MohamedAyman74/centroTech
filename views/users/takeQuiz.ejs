<% layout("layouts/boilerplate") %>
    <link rel="stylesheet" href="/stylesheets/takeQuiz.css">
    <section>
        <div class="header">
            <h1>
                <%= quiz.course.name %>
            </h1>
            <p id="grade">Quiz total grades is <span>
                    <%= quiz.totalGrade %>
                </span> marks</p>
        </div>
        <div class="mcq">
            <form action="/quiz/<%= quiz._id %>" method="POST">
                <% quiz.questions.forEach((question, i)=> { %>
                    <div class="question">
                        <p>Q<%= ++i %>) <%= question.question %>
                        </p>
                        <div>
                            <input type="radio" name="correctAnswers[<%= i %>]" value="answer1">
                            <label for="">
                                <%= question.answer1 %>
                            </label>
                        </div>
                        <div>
                            <input type="radio" name="correctAnswers[<%= i %>]" value="answer2">
                            <label for="">
                                <%= question.answer2 %>
                            </label>
                        </div>
                        <div>
                            <input type="radio" name="correctAnswers[<%= i %>]" value="answer3">
                            <label for="">
                                <%= question.answer3 %>
                            </label>
                        </div>
                        <div>
                            <input type="radio" name="correctAnswers[<%= i %>]" value="answer4">
                            <label for="">
                                <%= question.answer4 %>
                            </label>
                        </div>
                    </div>
                    <%= question.grade %> Marks
                        <% }); %>
                            <button>Submit</button>
            </form>
        </div>
    </section>